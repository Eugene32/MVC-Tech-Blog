<div class="position-relative p-5 ">
    <div class="align-center">
        {{#each posts as |post| }}


        <div class="card w-50 h-auto p-2 position-relative top-50 start-50 translate-middle ">
            <div class="row mb-4 post-list">
                <article class="post">
                    <div class="title fs-5 fw-bold text-primary">
                        <a href="/posts/{{id}}">{{title}}</a>
                    </div>
                    <div class="description">
                        {{description}}
                    </div>
                    <div class="user-info text-secondary">
                        <p>Posted by {{user.name}} on {{format_date date_created}}</p>
                    </div>
                </article>
            </div>
        </div>



        {{/each}}
    </div>

</div>